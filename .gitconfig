[user]
    name = teddyhwang
    email = tshwang@gmail.com

[color]
    ui = auto

[core]
	excludesfile = /Users/teddy.hwang/.gitignore
    autocrlf = false
    pager = less +G

[alias]
    llog = log --date=local
    st = status
    ci = commit

[svn]
    rmdir = true

[push]
    default = matching

[format]
    pretty = %C(blue)%h%Creset %C(238)-%Creset%C(yellow)%d%Creset %s %C(240)(%an, %cr)%Creset

# [credential]
#    helper = osxkeychain

# Force git to use HTTPS instead of SSH
# [url "https://"]
#     insteadOf = git://
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
